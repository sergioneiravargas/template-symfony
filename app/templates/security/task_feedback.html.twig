{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4">
            {% if failed %}
            <div class="alert alert-danger">
                <div>{{ message }}</div>
            </div>
            {% else %}
            <div class="alert alert-success">
                <div>{{ message }}</div>
            </div>
            {% endif %}
        </div>
        <div class="col"></div>
    </div>
</div>
{% endblock %}